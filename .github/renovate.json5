{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  // Enable GitHub's native automerge
  "platformAutomerge": true,

  "extends": [
    "config:best-practices",
  ],

  "git-submodules": {
    "enabled": true
  },

  // Do not rebase when the default branch is updated
  "rebaseWhen": "never",

  "customManagers": [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/^Justfile$/',
      ],
      matchStrings: [
        '(?<justName>.+?)\\s:=\\s"(?<packageName>\\S+):(?<currentValue>\\S+)@(?<currentDigest>sha256:[a-f0-9]+?)"',
      ],
      datasourceTemplate: 'docker',
    },
  ],

  "packageRules": [
    {
      "automerge": true,
      "matchUpdateTypes": ["pin", "pinDigest"]
    },
    {
      "automerge": true,
      "matchManagers": ["dockerfile"],
      "matchUpdateTypes": ["digest"]
    },
    {
      "automerge": true,
      "matchUpdateTypes": ["digest"],
      "matchDepNames": [
        // AlmaLinux base images
        "quay.io/almalinuxorg/almalinux-bootc",
        // CentOS base images
        "quay.io/centos-bootc/centos-bootc",
        "quay.io/centos-bootc/bootc-image-builder",
        // Fedora base images
        "quay.io/fedora/fedora-bootc",
        // Shared common layers
        "ghcr.io/projectbluefin/common",
        // Upstream ublue akmods (used for HWE and Fedora/CentOS)
        "ghcr.io/ublue-os/akmods-zfs",
        "ghcr.io/ublue-os/akmods-nvidia-open",
        "ghcr.io/ublue-os/brew",
        // Tuna-OS akmods (used for AlmaLinux base builds)
        "ghcr.io/tuna-os/akmods-zfs",
        "ghcr.io/tuna-os/akmods-nvidia-open",
      ]
    }
  ]
}
